{
  "name": "@nativescript/auto-fit-text",
  "version": "2.0.0",
  "description": "AutoFitText NativeScript plugin.",
  "main": "auto-fit-text",
  "typings": "index.d.ts",
  "nativescript": {
    "platforms": {
      "android": "3.2.0",
      "ios": "3.2.0"
    }
  },
  "scripts": {
    "build": "npm i && tsc",
    "tsc": "tsc -skipLibCheck",
    "postclone": "npm i && node scripts/postclone.js && cd ../demo && npm i && cd ../src && npm run plugin.link",
    "tslint": "cd .. && tslint \"**/*.ts\" --config tslint.json --exclude \"**/node_modules/**\" --exclude \"**/typings/**\"",
    "demo.ios": "npm i && npm run build && cd ../demo && tns run ios --syncAllFiles",
    "demo.android": "npm i && npm run build && cd ../demo && tns run android --syncAllFiles"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bradmartin/nativescript-auto-fit-text.git"
  },
  "keywords": [
    "NativeScript",
    "JavaScript",
    "Android",
    "iOS",
    "AutoFitText",
    "Adjust font to with"
  ],
  "author": {
    "name": "Daniel Leal",
    "email": "danielgek@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/bradmartin/nativescript-auto-fit-text/issues"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/bradmartin/nativescript-auto-fit-text",
  "readmeFilename": "README.md",
  "devDependencies": {
    "@nativescript/core": "~7.0.0",
    "@nativescript/types": "~7.0.1",
    "@nativescript/webpack": "~3.0.4",
    "prompt": "^1.0.0",
    "rimraf": "^2.5.0",
    "tslint": "^5.0.0",
    "typescript": "~3.9.7"
  }
}
